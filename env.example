# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# App URL (used in emails and redirects)
NEXT_PUBLIC_APP_URL=https://www.faloclaro.com

# Resend (Email)
RESEND_API_KEY=re_your_resend_key_here
# Must be a verified sender in Resend
RESEND_FROM_EMAIL=FaloClaro <noreply@faloclaro.com>
# Where website contact messages should be delivered (you can forward from Resend to your personal inbox)
RESEND_CONTACT_TO=contact@faloclaro.com

# Cron security (Vercel cron calls /api/cron/email-dispatch with this header)
CRON_EMAIL_SECRET=change_me_to_a_long_random_string

# Stripe Configuration
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
NEXT_PUBLIC_BASE_URL=https://www.faloclaro.com

